<h1>Manage News Items</h1>


<table>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>User</th>
    <th>Actions</th>
  </tr>

  <% @news_items.each do |news| %>
    <tr>
      <td><%= news.created_at %></td>
      <td><%= news.name %></td>
      <td><%= news.user.username %></td>
      <td>
        <%= link_to("Show", admin_news_path(news)) %>
        <%= link_to("Edit", edit_admin_news_path(news)) %>
        <%= link_to("Destroy", admin_news_path(news), :confirm => 'Are you sure you wish to permanently delete this record?', :method => :delete) %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @news_items %>

<%= link_to("New News Item", new_admin_news_path) %>
