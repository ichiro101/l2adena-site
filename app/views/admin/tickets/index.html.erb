<h1>Tickets</h1>

<table>
  <tr>
    <th>ID</th>
    <th>By</th>
    <th>Opened at</th>
    <th>Subject</th>
    <th>Status</th>
  </tr>

  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.id %></td>
      <td><%= ticket.user.username %></td>
      <td><%= ticket.created_at %></td>
      <td><%= ticket.name %></td>
      <td><%= ticket.status_label %></td>
      <td>
        <%= link_to 'View', admin_ticket_path(ticket) %>
      </td>
    </tr>
  <% end %>
</table>
