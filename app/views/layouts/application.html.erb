<!DOCTYPE html> <html>
  <head>
    <% if @title.blank? %>
      <title>L2adena</title>
    <% else %>
      <title><%= @title %></title>
    <% end %>
    <%= stylesheet_link_tag 'screen' %>
    <!--[if lt IE 8]>
  <link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection">
  <![endif]-->
    <%= stylesheet_link_tag 'custom' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <style type="text/css">
    </style>
  </head>
  <body>
  <div class="container">
    <div id="header" class="span-24 last">
      <div id="logo">
        <%= link_to image_tag('l2adena-logo.png', :class => 'span-5'), root_url %>
      </div>
      <div id="server-status" class="span-19 last">
        <%= server_status %>
      </div>
      <div id="badge" class="span-6 right">
        <% if user_signed_in? %>
          <%= image_tag(Gravatar.new(current_user.email).image_url) %>
          <span id="badge-text">
            Signed in as<br />
            <%= current_user.username %> (<%= link_to("Sign Out", signout_path) %>)<br />
            <%= link_to("User Settings", services_path) %>
          </span>
        <% else %>
          You are currently not logged in<br />
          <%= link_to("Sign In", signin_path) %>. New here? <%= link_to("Register", register_services_path) %>
        <% end %>
      </div>
    </div>

    <div class="clear"></div>

  <% if flash.any? %>
    <div id="flash" class="span-24">
      <% flash.each do |key, value| %>
          <div class="<%= key %>"><%= value %></div>
      <% end %>
    </div>
  <% end %>

    <div id="middle" class="span-24 last">
      <div id="side-menu" class="span-4">
        <ul>
          <li><%= link_to("Game Control Panel", :controller => 'game_accounts') %></li>
        </ul>
      </div>

      <div id="page-content" class="span-15">
      <%= yield %>
      </div>

      <div id="right-links" class="span-4 last">
        <h3>Vote</h3>
        <h3>Donate</h3>
      </div>
    </div>

  <div id="footer" class="span-24 last">
    &copy; 2011 L2Adena.<br />
    Source code of this site is avaliable @ <%= link_to("github", "https://github.com/ichiro101/l2adena-site") %>
  </div>

  </div>

  </body>
</html>
