<!DOCTYPE html>
<html>
  <head>
    <% if @title.blank? %>
      <title>L2adena</title>
    <% else %>
      <title><%= @title %></title>
    <% end %>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <section id="flash">
    <% flash.each do |key, value| %>
      <div class="<%= key %>"><%= value %></div>
    <% end %>
    </section>

    <section id="user">
    <% if user_signed_in? %>
      <nav id="nav_user">
      <ul>
        <span><%= image_tag(Gravatar.new(current_user.email).image_url) %>
          <%= current_user.email %></span>
        <li><%= link_to "Authentication Settings", services_path %>
        <li><%= link_to "Game Menu", {:controller => 'game_accounts', :action => 'index'} %>
        <li><%= link_to "Sign out", signout_services_path %></li>
      </ul>
      </nav>
    <% else %>
      <nav id="nav_user">
      <ul>
        <li><%= link_to "Sign in", signin_services_path %>
        <li><%= link_to "Register", {:controller => 'services', :action => 'register'} %>
      </ul>
      </nav>
    <% end %>
    </section>

    <%= yield %>


    <section id="footer">
    <% if user_signed_in? and current_user.can_access?(:admin_panel) %>
      <%= link_to("Admin Panel", {:controller => '/admin/home', :action => 'index'}) %><br />
    <% end %>

    <%= render(:partial => 'shared/footer') %>
    </section>

  </body>
</html>
