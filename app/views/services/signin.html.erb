<section id="services_signin" class="container">
    <h1>Sign in</h1>

    <p>
    You can sign in using one of your existing accounts at Facebook, Google, and other OpenID services, or login with your username and password below. Please select the provider you want to use:
    </p>

    <div>
        <%= render "services_list" %>
    </div>
    
    <p class="clear"></p>

    <h2>Sign in with Username and Password</h2>
    <%= form_tag({:controller => 'accounts', :action => 'signin'}, :method => 'post') do %>
      <table>
        <tr>
          <td><%= label_tag :username %></td>
          <td><%= text_field_tag :username %></td>
        </tr>
        <tr>
          <td><%= label_tag :password %></td>
          <td><%= password_field_tag :password %></td>
        </tr>
      </table>
      <%= submit_tag "Login" %>
    <% end %>
</section>
